<head>
<style>
table, th, td {
    border: 1px solid black;
}

table {
    border-collapse: collapse;
}

</style>
</head>

<table>
    {% for result in results %}
    <tr>
        <td>{{ result.project_name }} ({{ result.project_url }})</td>
        <td>{{ result.title }} ({{ result.url }})</td>
        <td>{{ result.user }}</td>
        <td>{{ result.time | formatduration }} ago</td>
    </tr>
    <tr style="background-color: #f2f2f2;border-bottom: 5px solid #000;">
        <td> #Comments: {{ result.comments }}</td>
        {% if result.last_comment %}
        <td>{{ result.last_comment.author }} : {{ result.last_comment.body }}</td>
        <td>{{ result.last_comment.created_at | formatduration }} ago</td>
        {% else %}
        <td>No comment for this Merge Request</td>
        <td></td>
        {% endif %}
    </tr>
    {% endfor %}
</table>
